---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv-nfs-pihole
  labels:
    type: local
spec:
  storageClassName: manual
  capacity:
    storage: 2Gi
  accessModes:
    - ReadWriteOnce
  nfs:
    server: "{{ nfs_server }}"
    path: "{{ nfs_path }}"
  claimRef:
    namespace: baselab
    name: pv-data-pihole-sts-0